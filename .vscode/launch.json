{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests watch mode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/client/node_modules/.bin/react-scripts",
            "args": [
                "test",
                "--runInBand",
                "--no-cache",
                "--watchAll=true"
            ],
            "cwd": "${workspaceRoot}/client",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}